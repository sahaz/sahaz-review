<div class="panel panel-default">
  <div class="row">
    <div class="col-lg-6">
      <%= image_tag "a.png", class: "img-responsive img-rounded center-block" %>
    
    </div>
    <div class="col-lg-4">
      <h2 class="text-center" >Sign up</h2>
      <hr>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name, html: {class: 'form-horizontal'})) do |f| %>
  <%= devise_error_messages! %>

  <div class="field form-group">
    <%= f.label :email, class: 'col-sm-2 control-label'  %><br />
    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :password, class: 'col-sm-2 control-label'  %>
   
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation, class: 'col-sm-12 control-label'  %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="actions form-group">
    <%= f.submit "Sign up", class: "col-sm-12 btn btn-sm btn-success" %>
  </div>
<% end %>



    </div>
  </div>
</div>



